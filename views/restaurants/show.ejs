<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-3">
      <img class="card-img-top img-fluid" src="/<%= restaurant.image %>" alt="Card image cap" />
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.title %></h5>
        <p class="card-text"><%= restaurant.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= restaurant.location %></li>
      </ul>
      <div class="card-body">
        <a href="/restaurants/<%=restaurant._id%>/edit" class="card-link btn btn-success"
          >Edit restaurant</a
        >
        <form
          class="d-inline"
          action="/restaurants/<%= restaurant._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
