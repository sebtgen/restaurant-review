<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-6 offset-3">
    <h1>New restaurant</h1>
    <form action="/restaurants" method="POST" novalidate class="validate-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="restaurant[title]" required />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="restaurant[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="restaurant[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="formFile" class="form-label">Image</label>
        <input class="form-control" type="file" id="image" name="restaurant[image]" required />
      </div>
      <div class="mb-3"><button class="btn btn-success">Add restaurant</button></div>
    </form>
  </div>
</div>
